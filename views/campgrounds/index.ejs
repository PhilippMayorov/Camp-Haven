<% layout("layouts/boilerplate") %>
<h1>All campgrounds</h1>

<% for(let campground of campgrounds){%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <% if(campground.images.length) { %>
      <img class="img-fluid" src="<%= campground.images[0].url%>" alt="" />
      <% }else {%>
      <img class="img-fluid" src="" alt="No image added" />
      <% } %>

    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p>
          <small class="text-secondary-emphasis"
            ><%= campground.location %></small
          >
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= campground.id %>"
          >View <%= campground.title%></a
        >
      </div>
    </div>
  </div>
  <% } %>
</div>
