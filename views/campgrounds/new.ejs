<% layout("layouts/broilerplate") %>
<div class="row d-flex justify-content-center">
  <h1 class="text-center">New campground</h1>
  <div class="col-6 offsef-8">
    <form action="/campgrounds" method="POST" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="locatoin">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="title"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            placeholder="0.00"
            id="price"
            type="text"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            name="campground[price]"
            required
          />
          <div class="valid-feedback">Looks good!</div>

          <span class="input-group-text">.00</span>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="campground[description]"
          type="text"
          id="description"
          cols="30"
          rows="6"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add campground</button>
      </div>
      <a href="/campgrounds">Back</a>
    </form>
  </div>
</div>

<script>
  ;(() => {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.validated-form')

    // Loop over them and prevent submission
    Array.from(forms).forEach((form) => {
      form.addEventListener(
        'submit',
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
            alert('Something went wrong')
          }

          form.classList.add('was-validated')
        },
        false
      )
    })
  })()
</script>
